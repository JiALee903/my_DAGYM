<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindpwActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backloginBtn2"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button"
        android:text="로그인 페이지로"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phone2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/find2button"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button"
        android:text="비밀번호 찾기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phone2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/certBtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:text="인증 번호"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/et_id"
        app:layout_constraintTop_toTopOf="@+id/et_phone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/certChkBtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:text="인증 확인"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/certBtn"
        app:layout_constraintTop_toTopOf="@+id/et_phone2" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/edittext"
        android:paddingLeft="5sp"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:paddingLeft="5sp"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_name"
        app:layout_constraintStart_toStartOf="@+id/et_name"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:hint="휴대폰 번호 (숫자만)"
        android:inputType="textPersonName"
        android:paddingLeft="5sp"
        app:layout_constraintStart_toStartOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@+id/et_id" />

    <EditText
        android:id="@+id/et_phone2"
        android:layout_width="169dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:hint="발송된 인증 번호 입력"
        android:inputType="textPersonName"
        android:paddingLeft="5sp"
        app:layout_constraintEnd_toEndOf="@+id/et_phone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_phone"
        app:layout_constraintTop_toBottomOf="@+id/et_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>