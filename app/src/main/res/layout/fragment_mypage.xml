<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mp_id"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="70dp"
            android:background="@color/white"
            android:hint="아이디"
            android:textSize="17sp"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:paddingLeft="5sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mp_pwd"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="수정할 비밀번호 입력"
            android:paddingLeft="5sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mp_pwdck"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:inputType="textPersonName"
            android:paddingLeft="5sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mp_name"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:paddingLeft="5sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mp_phone"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:hint="휴대폰 번호(숫자만)"
            android:paddingLeft="5sp" />

        <Button
            android:id="@+id/mp_messageBtn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:background="@color/black"
            android:text="문자 전송"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mp_phone2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:hint="발송된 인증 번호 입력"
            android:paddingLeft="5sp" />

        <Button
            android:id="@+id/mp_okBtn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:background="@color/black"
            android:text="인증 완료"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mp_email"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="수정할 이메일 입력"
            android:inputType="textEmailAddress"
            android:paddingLeft="5sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mp_birth"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:hint="주민 등록 번호 앞 8자리"
            android:inputType="textPersonName"
            android:paddingLeft="5sp" />
        <Spinner
            android:id="@+id/mp_spinner_gender"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mp_post"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:hint="기본 주소"
            android:inputType="textPersonName"
            android:paddingLeft="5sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mp_basicAddr"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="43dp"
            android:background="@color/white"
            android:hint="상세 주소"
            android:inputType="textPersonName"
            android:paddingLeft="5sp" />
    </LinearLayout>

    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mp_trainerCheck"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="트레이너" />

        <RadioButton
            android:id="@+id/mp_basic_userCheck"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:text="일반 회원" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mp_returnBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:text="돌아가기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    <Button
        android:id="@+id/mp_commitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:text="수정하기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
        <Button
            android:id="@+id/mp_deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:text="탈퇴하기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>