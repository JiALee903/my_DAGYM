<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/boardRecycle"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boardRecycle">

        <Button
            android:id="@+id/beforeBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="◀" />

        <TextView
            android:id="@+id/pageList"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="13sp"
            android:text="1" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="▶" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/writeFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#09134C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fabSize="normal"
        android:contentDescription="ignore" />

</androidx.constraintlayout.widget.ConstraintLayout>