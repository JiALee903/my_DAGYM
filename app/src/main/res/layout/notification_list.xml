<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationListCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:text="회원 이름"
        android:textColor="@color/black"
        android:textSize="17sp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friendID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendName"
        android:layout_alignStart="@+id/friendName"
        android:text="아이디 들어가는 곳"
        card_view:layout_constraintStart_toStartOf="@+id/friendName"
        card_view:layout_constraintTop_toBottomOf="@+id/friendName" />

    <Button
        android:id="@+id/applicantOKBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/friendID"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/friendName"
        android:text="수락"
        card_view:layout_constraintEnd_toStartOf="@+id/applicantNoBtn"
        card_view:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/applicantNoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/applicantOKBtn"
        android:layout_alignBottom="@+id/applicantOKBtn"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/applicantOKBtn"
        android:text="거절"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(2021/05/07~2021/05/31)"
        card_view:layout_constraintStart_toStartOf="@+id/friendID"
        card_view:layout_constraintTop_toBottomOf="@+id/friendID" />
</androidx.constraintlayout.widget.ConstraintLayout>